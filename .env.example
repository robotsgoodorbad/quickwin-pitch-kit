## Copy this file to .env.local (for local dev) or .env (for Firebase deploy)
## Then fill in your real values.

# Product Hunt (best-effort — app works without these)
PRODUCT_HUNT_TOKEN=""
PRODUCT_HUNT_API_KEY=""
PRODUCT_HUNT_API_SECRET=""

# AI — Gemini for AI-generated ideas (app falls back to mock if missing)
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-2.0-flash"
GEMINI_API_VERSION="v1beta"

# Playwright fallback for JS-heavy sites (optional, default false)
ENABLE_PLAYWRIGHT="false"

# Minimum step duration in ms for demo pacing (optional, default 0)
DEMO_MIN_STEP_MS="0"
